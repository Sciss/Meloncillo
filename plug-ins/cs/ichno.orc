	; soundfile input instrument	; p4 = soundfile path; p5 = za write index	instr 1		asig	diskin	p4, 1, $TIMESTART				zaw		asig, p5	endin	; mixing stage	; p4 = za read index; p5 = za write index; p6 = sense path	instr 22;		ksense	readk	p6, 6, 0	; 32bit float original krate;		asig	zarg	p4, ksense		asense	diskin	p6, 0.1, 0, 0, 6	; path, pitch, offset, wrap, format		asig	zar		p4				zawm	asig * asense, p5	endin	; soundfile output instrument	; p4 = za read index; p5 = output channel; p6 = master gain	instr 77		asig	zarg	p4, p6				outch	p5, asig				zacl	p4, p4	endin	; print progress information every 4 seconds	instr 88		iweight		=	1.0 / p3		kschoko		times					printks "CILLO %.2f\\n", 4, kschoko * iweight	endin