; last-mod: 23-apr-050dbfs = 1	; read a transmitter path and write its content to zak variables	; this is necessary because csound has a bug that forbids you to	; use more than one text string in a score i statement.	; p4 = traj input path; p5 = za write index for x, p6 = za write index for y	instr 12		; bug in CSound 4.23f11 -- channels are swapped		aty atx		diskin	p4, $SENSETOAUDIO, 0, 0, 6	; path, pitch, offset, wrap, format					zaw		atx, p5					zaw		aty, p6	endin	; one-dimensional noise tendency mask generator	; p4 = start min, p5 = start max, p6 = stop min, p7 = stop max	; p8 = zac output bus	instr 36		idur	=		p3		kmin	line	p4, idur, p6		kmax	line	p5, idur, p7		asig	random	kmin, kmax				zaw		asig, p8	endin	; soundfile output instrument	; p4 = za read index; p5 = output channel; p6 = master gain	instr 77		asig	zarg	p4, p6;		asig	zar		p4				outch	p5, asig;				printks "really out ch %d = %.2f\\n", 4, p5, asig				zacl	p4, p4	endin	; print progress information every 2 seconds	instr 88		iweight		=	1.0 / p3		kschoko		times					printks "CILLO %.2f\\n", 2, kschoko * iweight	endin